  <refentry id="fcrontab.1">
    <refmeta>
      <refentrytitle>fcrontab</refentrytitle> <manvolnum>1</manvolnum>
      <refmiscinfo>Fcron &version; <![%devrelease; [
      (<emphasis>development</emphasis> release)]]></refmiscinfo>
